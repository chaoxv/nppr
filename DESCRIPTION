    ggplot2,
    ggspatial,
    lubridate,
    purrr,
    R.utils,
    raster,
    RCurl,
    rnaturalearth,
    rnaturalearthdata,
    stats,
    stringr,
    tidyr,
    XML,
    rlang
Suggests: 
    knitr,
    rmarkdown,
    testthat
VignetteBuilder: 
    knitr
Encoding: UTF-8
LazyData: true
Roxygen: list(markdown = TRUE)
RoxygenNote: 7.1.2
